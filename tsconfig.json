{
  // "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "alwaysStrict": true,
    "target": "es6",
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"],
    "plugins": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["build", "node_modules"]
}
